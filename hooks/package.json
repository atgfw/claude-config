{
  "name": "@claude-config/hooks",
  "version": "1.1.0",
  "description": "TypeScript hooks for Claude Code - deterministic enforcement system with quality checks",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "quality": "npm run typecheck && npm run lint && npm run format:check",
    "quality:fix": "npm run lint:fix && npm run format",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "node -e \"const fs=require('fs'),p=require('path');const s=p.join('src','browser','scrapling_executor.py'),d=p.join('dist','browser');if(fs.existsSync(s)){fs.mkdirSync(d,{recursive:true});fs.copyFileSync(s,p.join(d,'scrapling_executor.py'))}\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "claude-code",
    "hooks",
    "automation",
    "enforcement",
    "quality-check",
    "xo",
    "prettier"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/eslint": "^8.56.0",
    "@types/estree": "^1.0.5",
    "@types/node": "^20.11.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "xo": "^0.59.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "xo": {
    "space": 2,
    "semicolon": true,
    "prettier": true,
    "ignores": ["src/lint/**/*.ts", "src/index.ts", "dist/**", "xo.config.reference.js"],
    "rules": {
      "no-console": "off",
      "no-template-curly-in-string": "off",
      "capitalized-comments": "off",
      "prefer-destructuring": "off",
      "object-shorthand": "off",
      "max-depth": "off",
      "no-await-in-loop": "off",
      "no-else-return": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/prefer-regexp-exec": "off",
      "@typescript-eslint/no-unnecessary-type-assertion": "off",
      "@typescript-eslint/prefer-optional-chain": "off",
      "@typescript-eslint/consistent-type-imports": "off",
      "@typescript-eslint/restrict-plus-operands": "off",
      "@typescript-eslint/consistent-type-assertions": "off",
      "@typescript-eslint/consistent-generic-constructors": "off",
      "@typescript-eslint/return-await": "off",
      "unicorn/switch-case-braces": "off",
      "unicorn/no-negated-condition": "off",
      "unicorn/prefer-optional-catch-binding": "off",
      "unicorn/no-for-loop": "off",
      "unicorn/numeric-separators-style": "off",
      "unicorn/no-lonely-if": "off",
      "unicorn/explicit-length-check": "off",
      "unicorn/prefer-spread": "off",
      "unicorn/prefer-at": "off",
      "unicorn/prefer-switch": "off",
      "unicorn/prefer-array-find": "off",
      "import/no-anonymous-default-export": "off",
      "@typescript-eslint/array-type": "off",
      "@typescript-eslint/prefer-includes": "off",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/parameter-properties": "off",
      "@typescript-eslint/prefer-readonly": "off",
      "@typescript-eslint/consistent-type-exports": "off",
      "@typescript-eslint/no-var-requires": "off",
      "no-bitwise": "off",
      "no-lonely-if": "off",
      "no-constant-condition": "off",
      "no-constant-binary-expression": "off",
      "@typescript-eslint/use-unknown-in-catch-callback-variable": "off",
      "@typescript-eslint/member-ordering": "off",
      "unicorn/prefer-code-point": "off",
      "promise/prefer-await-to-then": "off",
      "import/no-unassigned-import": "off",
      "complexity": "off",
      "max-params": "off",
      "operator-assignment": "off",
      "unicorn/no-array-callback-reference": "off",
      "@typescript-eslint/no-require-imports": "off",
      "no-useless-escape": "off",
      "logical-assignment-operators": "off",
      "no-return-assign": "off",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/dot-notation": "off",
      "@typescript-eslint/padding-line-between-statements": "off",
      "@typescript-eslint/consistent-type-definitions": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/prefer-nullish-coalescing": "off",
      "@typescript-eslint/no-confusing-void-expression": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-member-access": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/no-unsafe-return": "off",
      "@typescript-eslint/no-unsafe-argument": "off",
      "@typescript-eslint/restrict-template-expressions": "off",
      "@typescript-eslint/no-base-to-string": "off",
      "unicorn/no-process-exit": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/no-array-push-push": "off",
      "unicorn/better-regex": "off",
      "unicorn/text-encoding-identifier-case": "off",
      "unicorn/prefer-string-replace-all": "off",
      "unicorn/prefer-string-slice": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/catch-error-name": "off",
      "unicorn/no-null": "off",
      "unicorn/no-array-reduce": "off",
      "unicorn/no-nested-ternary": "off",
      "unicorn/prefer-top-level-await": "off",
      "unicorn/no-useless-undefined": "off",
      "unicorn/no-await-expression-member": "off",
      "unicorn/prefer-ternary": "off",
      "n/prefer-global/process": "off",
      "n/file-extension-in-import": "off",
      "import/order": "off",
      "import/prefer-default-export": "off",
      "@typescript-eslint/no-unused-vars": ["error", {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }],
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-non-null-assertion": "warn",
      "no-empty": ["error", { "allowEmptyCatch": true }],
      "unicorn/filename-case": ["error", {
        "cases": { "kebabCase": true, "snakeCase": true, "pascalCase": true }
      }],
      "unicorn/prefer-node-protocol": "warn",
      "unicorn/prefer-set-has": "off",
      "unicorn/prefer-module": "error"
    },
    "overrides": [
      {
        "files": ["**/*.test.ts", "**/*.spec.ts", "**/tests/**/*.ts"],
        "rules": {
          "@typescript-eslint/no-explicit-any": "off",
          "@typescript-eslint/no-non-null-assertion": "off",
          "unicorn/no-null": "off",
          "@typescript-eslint/no-unused-vars": "off"
        }
      }
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "auto"
  }
}
