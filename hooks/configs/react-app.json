{
  "version": "1.0.0",
  "name": "React App Quality Check",
  "description": "Quality checks optimized for React applications",
  "projectType": "react-app",
  "typescript": {
    "enabled": true,
    "showDependencyErrors": false,
    "jsxMode": true
  },
  "xo": {
    "enabled": true,
    "autofix": true
  },
  "prettier": {
    "enabled": true,
    "autofix": true
  },
  "general": {
    "autofixSilent": true,
    "debug": false
  },
  "rules": {
    "console": {
      "enabled": true,
      "severity": "info",
      "message": "Console is acceptable in development but consider removing for production",
      "allowIn": {
        "paths": ["/services/", "/utils/logger"],
        "fileTypes": ["test", "cli"],
        "patterns": ["*.test.tsx", "*.spec.tsx"]
      }
    },
    "asAny": {
      "enabled": true,
      "severity": "warning",
      "message": "Prefer proper types. Use React.ComponentProps<>, React.FC<>, or generics"
    },
    "debugger": {
      "enabled": true,
      "severity": "error",
      "message": "Remove debugger statements before committing"
    },
    "todos": {
      "enabled": true,
      "severity": "info",
      "patterns": ["TODO", "FIXME", "HACK"]
    }
  },
  "ignore": {
    "paths": [
      "node_modules/",
      "build/",
      "dist/",
      ".next/",
      "coverage/",
      "public/",
      "*.config.js",
      "*.config.ts",
      "*.config.mjs",
      "vite.config.*",
      "next.config.*"
    ]
  }
}
