{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": {
          "tools": ["BashTool"]
        },
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/pre-bash.sh \"$TOOL_INPUT\""
          }
        ]
      },
      {
        "matcher": {
          "tools": ["WriteTool"]
        },
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/pre-write.sh \"$FILE_PATH\" \"$CONTENT\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": {
          "tools": ["WriteTool", "EditTool"]
        },
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/post-code-write.sh"
          }
        ]
      },
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/post-tool-use.sh \"$TOOL_NAME\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/pre-task-start.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/pre-task-complete.sh"
          }
        ]
      }
    ]
  }
}
